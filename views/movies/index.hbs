<div class="header">
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href="/">Movies</a>
    <div class="collapse navbar-collapse" id="navbarNavDropdown" style="position: fixed; right: 25px;">
      {{#if user}}
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/">{{user}}</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/signout">Signout</a>
        </li>
      </ul>
      {{else}}
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href="/user/login">Login</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="/user/signup">Signup</a>
        </li>
      </ul>
      {{/if}}
    </div>
  </nav>
</div>

<div class="container">
  <a class="btn btn-secondary" href="/addmovie"><i class="fa fa-plus"></i> Create New</a>
  <h3 align="center">Movies List</h3>
</div>
<div class="container">

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Movie Name</th>
        <th>Rating</th>
        <th>Movie Cast</th>
        <th>Movie Genre</th>
        <th>Release Date</th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      {{#each movies}}
      <tr align="center">
        <td>{{this.moviename}}</td>
        <td>{{this.rating}}</td>
        <td>{{this.cast}}</td>
        <td>{{this.genre}}</td>
        <td>{{this.releasedate}}</td>
        <td>
          <a href="/updatemovie/{{this._id}}"> Update Movie </a>
          <a href="/delete/{{this._id}}" onclick="return confirm('Are you sure to delete this movie ?');"> Delete
          </a>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>
</div>